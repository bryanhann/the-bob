[ ! "$0" == "./install" ] && echo try ./install && exit

mkdir -p ~/.local/bin
cat    > ~/.local/bin/bob <<EOF
if [ \$( basename \$0 ) == "bob" ]
then
	$PWD/scripts/bob.sh \$*
	exit \$?
else
	source \$HOME/.config/bob/activate
fi	
EOF
chmod +x ~/.local/bin/bob

mkdir -p ~/.config/bob
cat    > ~/.config/bob/activate <<ACT
	export BOB=$PWD
	source \$BOB/activate
ACT


echo Bob is installed to [~/.local/bin/bob].
echo Respect the bob.

